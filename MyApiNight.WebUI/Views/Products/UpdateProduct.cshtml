@model MyApiNight.WebUI.Dtos.UpdateProductDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br /><br />
        <input type="hidden" asp-for="ProductId" />
        <label>Product Name</label>
        <br />       
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Product Price</label>
        <br />
        <input type="text" asp-for="ProductPrice" class="form-control" />
        <br />
        <label>Product Stock</label>
        <br />
        <input type="text" asp-for="ProductStock" class="form-control" />
        <br />
        <button class="btn btn-primary">Update Product </button>
    </div>
</form>

